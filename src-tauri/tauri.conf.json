{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tusker",
  "version": "0.5.0",
  "identifier": "com.jad.tusker",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Tusker",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "A modern PostgreSQL database client",
    "longDescription": "Tusker is a modern, fast PostgreSQL database client built for developers. Browse schemas, edit data, write queries, and manage your databases with a beautiful native interface.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "nsis": {
        "displayLanguageSelector": false,
        "installMode": "currentUser",
        "headerImage": null,
        "sidebarImage": null
      }
    },
    "createUpdaterArtifacts": "v1Compatible"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlBMUNEQTU3NDUxNUMxRkYKUldUL3dSVkZWOW9jbWgxR3UzSm5Pc1h3VWpCZFRHWEsvNE51NWZBTVNCWEMwSFFobzhNUkVGZXAK",
      "endpoints": [
        "https://github.com/18jad/tusker/releases/latest/download/latest.json"
      ]
    }
  }
}
